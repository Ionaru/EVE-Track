{
    "name": "evie-server",
    "version": "0.4.1",
    "author": "Jeroen Akkerman",
    "description": "Server module for EVIE",
    "repository": {
        "type": "git",
        "url": "https://github.com/Ionaru/EVIE.git"
    },
    "scripts": {
        "build": "tsc --project tsconfig.json",
        "start": "cross-env NODE_ENV=production node ./dist/server/src/index.js",
        "serve": "gulp clean && npm run build && npm run start",
        "lint": "tslint --project tsconfig.json -c tslint.json \"src/**/*.ts\" --format stylish",
        "unit": "nyc mocha --require ts-node/register src/**/*.spec.ts",
        "test": "npm run lint && npm run unit",
        "dev": "cross-env TS_NODE_FILES=true LEVEL=debug node --require ts-node/register ./src/index.ts"
    },
    "nyc": {
        "exclude": [
            "src/**/*.spec.ts"
        ],
        "extension": [
            ".ts"
        ]
    },
    "dependencies": {
        "app-root-path": "^2.1.0",
        "axios": "^0.18.0",
        "bcryptjs": "^2.4.3",
        "body-parser": "^1.18.2",
        "chalk": "^2.4.1",
        "clone": "^2.1.2",
        "compression": "^1.7.3",
        "cors": "^2.8.4",
        "express": "^4.16.4",
        "express-mysql-session": "^2.0.1",
        "express-session": "^1.15.6",
        "fs-extra": "^7.0.0",
        "helmet": "^3.12.1",
        "http-status-codes": "^1.3.0",
        "ini": "^1.3.5",
        "mysql": "^2.16.0",
        "on-finished": "^2.3.0",
        "reflect-metadata": "^0.1.12",
        "socket.io": "^2.1.1",
        "socket.io-express-session": "^0.1.3",
        "source-map-support": "^0.5.6",
        "typeorm": "^0.2.7",
        "winston-pnp-logger": "^1.0.5"
    },
    "devDependencies": {
        "@types/app-root-path": "^1.2.4",
        "@types/bcryptjs": "^2.4.2",
        "@types/body-parser": "^1.17.0",
        "@types/chai": "^4.1.6",
        "@types/clone": "^0.1.30",
        "@types/compression": "0.0.36",
        "@types/cors": "^2.8.4",
        "@types/express": "^4.16.0",
        "@types/express-mysql-session": "^1.2.2",
        "@types/express-serve-static-core": "^4.16.0",
        "@types/express-session": "^1.15.10",
        "@types/fs-extra": "^5.0.4",
        "@types/gulp": "^4.0.5",
        "@types/helmet": "0.0.42",
        "@types/ini": "^1.3.29",
        "@types/mocha": "^5.2.5",
        "@types/mysql": "^2.15.5",
        "@types/node": "^10.12.0",
        "@types/on-finished": "^2.3.1",
        "@types/sinon": "^5.0.3",
        "@types/socket.io": "^1.4.37",
        "@types/source-map-support": "^0.4.1",
        "chai": "^4.2.0",
        "cross-env": "^5.2.0",
        "gulp": "^4.0.0",
        "mocha": "^5.2.0",
        "nyc": "^13.1.0",
        "sinon": "^6.3.5",
        "ts-node": "^7.0.0",
        "tslint": "^5.11.0",
        "typescript": "^2.9.2"
    },
    "license": "MIT"
}
