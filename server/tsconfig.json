{
    "compilerOptions": {
        "baseUrl": "",
        "declaration": false,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "strict": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "lib": [
            "es2018",
            "es2017",
            "es2016",
            "es2015"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "outDir": "./dist",
        "sourceMap": true,
        "target": "es6",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "src/**/*.spec.ts"
    ],
    "include": [
        "src/**/*.ts"
    ]
}
